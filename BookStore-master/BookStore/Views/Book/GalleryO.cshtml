        <div class="row">
            @foreach (var item in Model.Books)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <div class="img-box">
                            <img src="@Url.Content(item.ImgUrl)" alt="">
                            <a asp-controller="ShopingCart" asp-action="AddToShopingCart" asp-route-bookId="@item.Id" class="img-box-cart">Add to Cart</a>
                        </div>
                        <div class="caption">
                            <h4 class="pull-right">$@item.Price</h4>
                            <h4>
                                <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                            </h4>
                            <h5>
                                <a target="_blank" href="http://www.fb.com/shbsovon">@item.Author</a>
                            </h5>
                            <p>@item.Details</p>
                        </div>
                        <div class="ratings">
                            <p class="pull-right">15 reviews</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                            </p>
                        </div>
                    </div>
                </div>
            }@*End of Foreach Statement*@

        </div>

    </div>
</div>

